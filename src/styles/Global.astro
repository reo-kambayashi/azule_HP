<style is:global>
  /* 
 * グローバルCSS変数の定義
 * これらの変数はサイト全体で使用され、一貫したデザインを保つのに役立ちます
 */

  :root {
    /* 美術館をイメージした白黒基調のモダンなカラーパレット */
    --color-primary: #1a1a1a; /* ディープブラック */
    --color-secondary: #333333; /* チャコールグレー */
    --color-accent: #666666; /* ミディアムグレー */
    --color-accent-light: #999999; /* ライトグレー */
    --color-accent-dark: #4a4a4a; /* ダークグレー（ホバー用） */
    --color-bg: linear-gradient(
      135deg,
      #ffffff 0%,
      #f8f9fa 30%,
      #f1f3f4 70%,
      #e9ecef 100%
    ); /* 白からライトグレーのグラデーション背景 */
    --color-bg-solid: #ffffff; /* 純白のソリッド背景色 */
    --color-text: #2c2c2c; /* ダークグレーのテキスト */
    --color-text-light: #6c757d; /* ライトグレーのテキスト */
    --color-link: var(--color-primary); /* リンクの色 */
    --color-link-hover: #000000; /* ホバー時のリンクの色（純黒） */
    --color-border: #e0e0e0; /* ライトグレーのボーダー */
    --color-white: #ffffff; /* 純白 */
    --color-bg-rgb: 255, 255, 255; /* 背景色のRGB値 */
    --color-border-light: #f5f5f5; /* 非常に薄いグレーの境界線 */
    --color-glass: rgba(
      255,
      255,
      255,
      0.85
    ); /* グラスモーフィズム用（美術館らしい透明感） */
    --color-shadow: rgba(0, 0, 0, 0.08); /* 柔らかな黒い影 */
    --color-accent-rgb: 102, 102, 102; /* アクセントカラーのRGB値 */

    /* スペーシング設定 - 余白やパディングに使用 */
    --spacing-xs: 0.25rem; /* 極小スペース (4px) */
    --spacing-sm: 0.5rem; /* 小スペース (8px) */
    --spacing-md: 1rem; /* 中スペース (16px) */
    --spacing-lg: 1.5rem; /* 大スペース (24px) */
    --spacing-xl: 2rem; /* 特大スペース (32px) */
    --spacing-2xl: 3rem; /* 最大スペース (48px) */

    /* 角丸設定 */
    --radius-sm: 8px; /* 小さい角丸 */
    --radius-base: 16px; /* 標準の角丸 */
    --radius-lg: 24px; /* 大きい角丸 */
    --radius-full: 9999px; /* 完全な円形 */

    /* 影の設定 - 美術館らしいソフトな影効果 */
    --shadow-sm: 0 1px 3px rgba(0, 0, 0, 0.05);
    --shadow-base: 0 4px 8px rgba(0, 0, 0, 0.08), 0 2px 4px rgba(0, 0, 0, 0.04);
    --shadow-md: 0 10px 20px rgba(0, 0, 0, 0.08), 0 4px 8px rgba(0, 0, 0, 0.04);
    --shadow-lg: 0 20px 30px rgba(0, 0, 0, 0.1), 0 8px 15px rgba(0, 0, 0, 0.05);
    --shadow-xl: 0 25px 40px rgba(0, 0, 0, 0.12);
    --shadow-glow: 0 0 30px rgba(0, 0, 0, 0.06);
    --shadow-glass: 0 8px 32px rgba(0, 0, 0, 0.06),
      0 4px 16px rgba(0, 0, 0, 0.04);
    --box-shadow-card: var(--shadow-lg);

    /* グラスモーフィズム効果 - 美術館らしい上品な透明感 */
    --glass-bg: rgba(255, 255, 255, 0.9);
    --glass-border: rgba(0, 0, 0, 0.08);
    --glass-backdrop: blur(20px);

    /* レイアウト設定 */
    --container-max-width: 1200px;
    --container-padding: var(--spacing-md);
    --card-width: 80%;
    --card-max-width: 800px;

    /* ヘッダーとフッターの設定 */
    --header-txt: #1a1a1a; /* ヘッダーテキストの色（ディープブラック） */
    --header-bg: rgba(
      255,
      255,
      255,
      0.95
    ); /* ヘッダー背景色（美術館らしい半透明白） */
    --footer-bg: #f8f9fa; /* フッター背景色（オフホワイト） */
    --footer-border: #e9ecef; /* フッターのボーダー色（ライトグレー） */

    /* アニメーション設定 */
    --transition-base: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    --transition-fast: all 0.15s ease-out;
    --transition-slow: all 0.5s ease-in-out;
    --animation-bounce: cubic-bezier(0.68, -0.55, 0.265, 1.55);

    /* レスポンシブデザイン用ブレークポイント */
    --breakpoint-sm: 480px; /* スマートフォン用 */
    --breakpoint-md: 768px; /* タブレット用 */
    --breakpoint-lg: 1024px; /* 小型デスクトップ用 */
    --breakpoint-xl: 1280px; /* 大型デスクトップ用 */

    /* タッチターゲットサイズ - モバイルでのタップしやすさを向上 */
    --touch-target-min: 44px; /* 最小タッチエリア (Apple HIG推奨) */
  }

  /* HTMLのベーススタイル */
  html {
    font-size: 16px; /* ベースフォントサイズ設定 */
    -webkit-text-size-adjust: 100%; /* モバイルでのフォントサイズ自動調整を無効化 */
  }

  /* ボディのベーススタイル */
  body {
    font-family:
      "Inter",
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      "Roboto",
      sans-serif;
    font-size: 1rem;
    line-height: 1.7;
    color: var(--color-text);
    margin: 0;
    padding: 0;
    background: var(--color-bg);
    background-attachment: fixed;
    display: flex;
    flex-direction: column;
    min-height: 100vh;
    overflow-x: hidden;
    -webkit-overflow-scrolling: touch;
    position: relative;
  }

  /* 背景にパーティクル効果用の疑似要素 - 美術館らしい上品な効果 */
  body::before {
    content: "";
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: radial-gradient(
        circle at 20% 30%,
        rgba(0, 0, 0, 0.02) 0%,
        transparent 60%
      ),
      radial-gradient(
        circle at 80% 70%,
        rgba(0, 0, 0, 0.015) 0%,
        transparent 60%
      ),
      radial-gradient(
        circle at 50% 50%,
        rgba(0, 0, 0, 0.01) 0%,
        transparent 70%
      );
    pointer-events: none;
    z-index: -1;
  }

  /* 見出し要素のスタイル */
  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    margin-top: 0;
    margin-bottom: var(--spacing-md);
    font-weight: 700;
    line-height: 1.2;
    text-align: center;
    word-wrap: break-word;
    background: linear-gradient(
      135deg,
      var(--color-primary),
      var(--color-secondary)
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    letter-spacing: -0.025em;
  }

  /* 各見出しレベルのフォントサイズ設定 */
  h1 {
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 800;
  }
  h2 {
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 700;
  }
  h3 {
    font-size: clamp(1.5rem, 3vw, 2.25rem);
    font-weight: 600;
  }
  h4 {
    font-size: 1.5rem;
  } /* 24px */
  h5 {
    font-size: 1.25rem;
  } /* 20px */
  h6 {
    font-size: 1rem;
  } /* 16px */

  /* リンクのスタイル */
  a {
    color: inherit;
    text-decoration: none;
    transition: var(--transition-base);
    min-height: var(--touch-target-min);
    display: inline-flex;
    align-items: center;
    position: relative;
  }

  /* モダンなホバー効果 */
  a:hover {
    transform: translateY(-1px);
    color: var(--color-link-hover);
  }

  /* リンクのアンダーライン効果 - 美術館らしいモノトーン効果 */
  a:not(.button):not(.nav-link)::after {
    content: "";
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 2px;
    background: linear-gradient(
      90deg,
      var(--color-primary),
      var(--color-secondary)
    );
    transition: width 0.3s ease;
  }

  a:not(.button):not(.nav-link):hover::after {
    width: 100%;
  }

  /* コンテナクラスのスタイル - コンテンツを中央に配置し、適切な幅を保つ */
  .container {
    width: 100%; /* 幅を100%に設定 */
    max-width: var(--container-max-width); /* 最大幅を制限 */
    margin: 0 auto; /* 中央配置 */
    padding: 0 var(--container-padding); /* 左右にパディングを追加 */
    box-sizing: border-box; /* ボックスサイズの計算方法を設定 */
  }

  /* メインコンテナのスタイル - ページの主要コンテンツ部分 */
  main.container {
    flex: 1; /* 空きスペースを埋める */
    padding-top: var(--spacing-md); /* 上部のパディング */
    padding-bottom: var(--spacing-xl); /* 下部のパディング */
    box-sizing: border-box; /* パディングを幅の計算に含める */
    width: 100%; /* 幅を100%に設定 */
    overflow-x: hidden; /* 横方向のスクロールを無効化 */
  }

  /* カードコンポーネントのスタイル - 美術館らしいエレガントなカード */
  .card {
    background: rgba(255, 255, 255, 0.98);
    backdrop-filter: blur(25px);
    border: 1px solid rgba(0, 0, 0, 0.06);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-xl);
    padding: var(--spacing-xl);
    margin-bottom: var(--spacing-xl);
    width: var(--card-width);
    max-width: var(--card-max-width);
    margin-left: auto;
    margin-right: auto;
    box-sizing: border-box;
    position: relative;
    overflow: hidden;
    transition: var(--transition-base);
  }

  /* カードのホバー効果 - 美術館らしい上品な浮遊効果 */
  .card:hover {
    transform: translateY(-6px) scale(1.01);
    box-shadow: var(--shadow-xl), var(--shadow-glow);
    border-color: rgba(0, 0, 0, 0.1);
  }

  /* カードの光る効果 - 美術館らしい控えめな光沢 */
  .card::before {
    content: "";
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(255, 255, 255, 0.6),
      transparent
    );
    transition: left 0.6s ease;
  }

  .card:hover::before {
    left: 100%;
  }

  /* ボタンのスタイル */
  .button {
    display: inline-flex;
    justify-content: center;
    align-items: center;
    min-height: var(--touch-target-min);
    padding: var(--spacing-md) var(--spacing-xl);
    font-weight: 700;
    font-size: 1rem;
    background: var(--color-white);
    border: 2px solid var(--color-primary);
    border-radius: var(--radius-full);
    color: var(--color-primary);
    cursor: pointer;
    transition: var(--transition-base);
    text-decoration: none;
    text-align: center;
    position: relative;
    overflow: hidden;
    box-shadow: var(--shadow-md);
    letter-spacing: 0.025em;
  }

  /* ボタンのホバー効果 - 美術館らしいモノトーンホバー */
  .button:hover {
    transform: translateY(-2px) scale(1.03);
    box-shadow: var(--shadow-lg), var(--shadow-glow);
    background: linear-gradient(
      135deg,
      var(--color-primary),
      var(--color-secondary)
    );
    color: var(--color-white);
    border-color: var(--color-primary);
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
  }

  /* ボタンのアクティブ効果 */
  .button:active {
    transform: translateY(0) scale(0.98);
  }

  /* ボタンの光る効果 */
  .button::before {
    content: "";
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(255, 255, 255, 0.3),
      transparent
    );
    transition: left 0.5s;
  }

  .button:hover::before {
    left: 100%;
  }

  /* セクションのスタイル - コンテンツのまとまりを表す */
  .section {
    margin-bottom: var(--spacing-2xl); /* 下部マージン */
    width: 100%; /* 幅を100%に設定 */
    box-sizing: border-box; /* パディングを幅の計算に含める */
  }

  /* 画像のスタイル */
  img {
    max-width: 100%; /* 親要素からはみ出さないように */
    height: auto; /* アスペクト比を維持 */
    display: block; /* ブロック要素として表示 */
    margin: 0 auto; /* 中央配置 */
    will-change: transform; /* GPUアクセラレーションを有効化 */
  }

  /* グリッドレイアウト - 複数の要素を均等に配置 */
  .grid {
    display: grid; /* グリッドレイアウトを使用 */
    grid-template-columns: repeat(
      auto-fill,
      minmax(280px, 1fr)
    ); /* レスポンシブなカラム設定 */
    gap: var(--spacing-lg); /* グリッドアイテム間の間隔 */
    width: 100%; /* 幅を100%に設定 */
    box-sizing: border-box; /* パディングを幅の計算に含める */
  }

  /* フレックスコンテナ - 柔軟なレイアウト用 */
  .flex-container {
    display: flex; /* フレックスボックスレイアウトを使用 */
    flex-wrap: wrap; /* 必要に応じて折り返す */
    gap: var(--spacing-md); /* アイテム間の間隔 */
    width: 100%; /* 幅を100%に設定 */
    box-sizing: border-box; /* パディングを幅の計算に含める */
  }

  /* テーブルのスタイル */
  table {
    width: 100%; /* 幅を100%に */
    border-collapse: collapse; /* セル間の境界線を結合 */
    margin: var(--spacing-md) 0; /* 上下のマージン */
    overflow-x: auto; /* 横にはみ出る場合はスクロール可能に */
    display: block; /* ブロック要素として表示（スクロール用） */
  }

  /* キーボード操作時のフォーカス状態を明確にする - 美術館テーマ */
  :focus {
    outline: 2px solid var(--color-primary);
    outline-offset: 2px;
  }

  /* マウスやタッチでのフォーカスはより控えめに */
  :focus:not(:focus-visible) {
    outline: none;
  }

  /* キーボードフォーカスは明確に表示 */
  :focus-visible {
    outline: 2px solid var(--color-primary);
    outline-offset: 2px;
    box-shadow: 0 0 0 1px var(--color-white);
  }

  /* 
 * レスポンシブデザイン設定
 * 異なる画面サイズに対応するためのスタイル調整
 */

  /* 大型タブレット・小型デスクトップ向け (1024px以下) */
  @media (max-width: 1024px) {
    :root {
      --spacing-lg: 1.25rem; /* 大スペースを少し小さく */
      --spacing-xl: 1.75rem; /* 特大スペースを小さく */
      --spacing-2xl: 2.5rem; /* 最大スペースを小さく */
      --card-width: 85%; /* カード幅を広げる */
    }
    h1 {
      font-size: 2.25rem;
    } /* 見出しサイズ調整 */
    h2 {
      font-size: 1.75rem;
    } /* 見出しサイズ調整 */
    .grid {
      grid-template-columns: repeat(
        auto-fill,
        minmax(240px, 1fr)
      ); /* グリッドカラムを狭く */
    }
  }

  /* タブレット向け (768px以下) */
  @media (max-width: 768px) {
    :root {
      --spacing-lg: 1rem; /* 大スペースをさらに小さく */
      --spacing-xl: 1.5rem; /* 特大スペースをさらに小さく */
      --spacing-2xl: 2rem; /* 最大スペースをさらに小さく */
      --card-width: 90%; /* カード幅をさらに広げる */
    }
    html {
      font-size: 16px; /* モバイルでも16pxを維持（可読性向上） */
    }
    h1 {
      font-size: 2rem;
    } /* 見出しサイズ調整 */
    h2 {
      font-size: 1.5rem;
    } /* 見出しサイズ調整 */
    h3 {
      font-size: 1.35rem;
    } /* 見出しサイズ調整 */
    .card {
      padding: var(--spacing-md); /* カードのパディングを減らす */
      border-radius: var(--radius-sm); /* 角丸を小さく */
    }
    .grid {
      grid-template-columns: repeat(
        auto-fill,
        minmax(200px, 1fr)
      ); /* グリッドカラムをさらに狭く */
      gap: var(--spacing-md); /* グリッド間隔を小さく */
    }
    .button {
      width: 100%; /* ボタンを幅いっぱいに */
      margin-bottom: var(--spacing-sm); /* ボタンの下にマージンを追加 */
      padding: var(--spacing-md) var(--spacing-md); /* パディングを増やしてタップしやすく */
    }
    /* リンクの間隔をモバイルで広げる */
    a:not(.button) {
      padding: var(--spacing-xs) 0; /* 上下のパディングを追加 */
    }
  }

  /* スマートフォン向け (480px以下) */
  @media (max-width: 480px) {
    :root {
      --card-width: 95%; /* カード幅をほぼいっぱいに */
      --spacing-md: 0.8rem; /* 中スペースをさらに小さく */
    }
    html {
      font-size: 16px; /* 可読性のため16pxを維持 */
    }
    h1 {
      font-size: 1.75rem;
    } /* 見出しサイズ調整 */
    h2 {
      font-size: 1.25rem;
    } /* 見出しサイズ調整 */
    h3 {
      font-size: 1.1rem;
    } /* 見出しサイズ調整 */
    .card {
      padding: var(--spacing-sm); /* カードのパディングをさらに減らす */
      width: 95%; /* 画面幅に合わせて調整 */
    }
    .grid {
      grid-template-columns: 1fr; /* グリッドを1列に */
    }
    .container {
      padding: 0 calc(var(--container-padding) * 0.75); /* コンテナパディングを小さく */
    }
    /* ボタン間のスペースを確保 */
    .button + .button {
      margin-top: var(--spacing-md);
    }
  }

  /* 小型スマートフォン向け (375px以下) */
  @media (max-width: 375px) {
    :root {
      --card-width: 100%; /* カード幅をいっぱいに */
      --container-padding: var(--spacing-sm); /* コンテナの内側余白を減らす */
    }
    .card {
      border-radius: var(--radius-sm); /* 角丸を小さく */
    }
    h1 {
      font-size: 1.5rem;
    } /* 見出しサイズをさらに小さく */
    h2 {
      font-size: 1.2rem;
    } /* 見出しサイズをさらに小さく */
    /* ボタンのテキストサイズを調整 */
    .button {
      font-size: 0.9rem;
    }
  }
</style>
