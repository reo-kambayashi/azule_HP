<style is:global>
/* 
 * コンポーネントスタイル定義
 * このファイルでは、リリースカードとツアーカードに関連するスタイルを定義しています
 */

/* リリースカードとツアーカードの共通スタイル - 情報を表示するメインのカードコンポーネント */
.release-card,
.tour-card {
    width: var(--card-width);           /* カードの幅（グローバル変数から取得） */
    max-width: var(--card-max-width);   /* 最大幅の制限 */
    margin: 0 auto var(--spacing-xl);   /* 上下左右のマージン（中央揃え） */
    display: flex;                       /* フレックスボックスレイアウトを使用 */
    align-items: flex-start;            /* アイテムを上端に揃える */
    gap: var(--spacing-lg);             /* アイテム間の間隔 */
    background: var(--color-white);     /* 背景色を白に設定 */
    padding: var(--spacing-lg);         /* 内側の余白 */
    border-radius: var(--radius-base);  /* 角を丸くする */
    box-shadow: var(--box-shadow-card); /* カードに影を追加 */
    flex-wrap: wrap;                    /* 必要に応じて折り返し */
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    /* fadeInアニメーションを削除 */
}

/* リリースカードとツアーカードのホバーアニメーション */
.release-card:hover,
.tour-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
}

/* リリースカバー画像のスタイル */
.release-cover {
    width: 300px;                        /* 画像の幅を固定 */
    height: auto;                        /* 高さは自動調整（アスペクト比維持） */
    object-fit: cover;                   /* 画像のサイズ調整方法 */
    flex-shrink: 0;                      /* フレックスアイテムの縮小を防止 */
    border-radius: var(--radius-sm);     /* 画像の角を丸くする */
    box-shadow: var(--box-shadow-card);  /* 画像に影を追加 */
    transition: transform 0.5s ease;
}

.release-cover:hover {
    transform: scale(1.05);
}

/* リリース情報のスタイル - タイトル、日付、トラックリストなどの情報を格納 */
.release-info {
    flex: 1;                   /* 利用可能なスペースを埋める */
    display: flex;             /* フレックスボックスレイアウトを使用 */
    flex-direction: column;    /* 子要素を縦に並べる */
    justify-content: center;   /* 中央揃え（縦方向） */
}

/* リリースタイトルのスタイル */
.release-title {
    font-size: 1.5rem;                  /* フォントサイズ設定 */
    margin: 0 0 var(--spacing-sm);      /* 下部にのみマージンを設定 */
    text-align: left;                   /* テキストを左揃え */
}

/* リリース日のスタイル */
.release-date {
    font-size: 1rem;                    /* フォントサイズ設定 */
    color: var(--color-text-light);     /* 薄い色のテキスト */
    margin-bottom: var(--spacing-md);   /* 下部マージンを設定 */
}

/* トラックリストのスタイル */
.tracklist {
    list-style: decimal inside;    /* 数字付きリスト（内側に表示） */
    padding: 0;                    /* パディングをリセット */
    margin: 0;                     /* マージンをリセット */
}

/* トラックリストの各項目のスタイル */
.tracklist li {
    margin-bottom: var(--spacing-sm);  /* 項目間のマージン */
    font-size: 1rem;                   /* フォントサイズ設定 */
    color: var(--color-text);          /* テキスト色 */
}

/* サブスクリプションリンク（Spotify、Apple Musicなど）のコンテナスタイル */
.subscription-links {
    display: flex;                    /* フレックスボックスレイアウトを使用 */
    flex-wrap: wrap;                  /* 必要に応じて折り返し */
    gap: var(--spacing-sm);           /* リンク間の間隔 */
    margin-top: var(--spacing-md);    /* 上部マージン */
}

/* 個別のサブスクリプションリンクスタイル */
.sub-link {
    display: inline-block;              /* インラインブロックとして表示 */
    padding: var(--spacing-sm) var(--spacing-md); /* 上下・左右のパディング */
    font-size: 0.9rem;                  /* フォントサイズを小さく */
    font-weight: 600;                   /* フォントを太く */
    color: var(--color-secondary);      /* テキスト色 */
    background-color: transparent;      /* 背景を透明に */
    border: 1px solid var(--color-secondary); /* 境界線 */
    border-radius: var(--radius-base);  /* 角を丸くする */
    transition: var(--transition-base); /* アニメーション効果 */
    text-decoration: none;              /* 下線を削除 */
    position: relative;
    overflow: hidden;
    z-index: 1;
}

.sub-link:before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 0;
    height: 100%;
    background-color: var(--color-secondary);
    transition: width 0.3s ease;
    z-index: -1;
}

/* ホバー時のサブスクリプションリンクスタイル */
.sub-link:hover {
    background-color: var(--color-secondary); /* 背景色を変更 */
    color: var(--color-white);               /* テキスト色を白に */
    transform: translateY(-2px);             /* 少し上に移動する効果 */
    text-decoration: none;                   /* 下線なし */
}

.sub-link:hover:before {
    width: 100%;
}

/* ツアーセクション全体のスタイル */
.tour {
    padding: var(--spacing-xl);         /* 周囲のパディング */
}

/* ツアーリスト（複数のツアー情報）のスタイル */
.tour-list {
    display: flex;                        /* フレックスボックスレイアウトを使用 */
    flex-direction: column;               /* 子要素を縦に並べる */
    gap: var(--spacing-lg);               /* ツアーカード間の間隔 */
    max-width: var(--container-max-width); /* 最大幅の制限 */
    margin: 0 auto;                       /* 中央揃え */
}

/* ツアー情報のスタイル - 日時、会場、詳細情報などを表示 */
.tour-info {
    order: 1;                 /* フレックスアイテムの表示順序 */
    flex: 1;                  /* 利用可能なスペースを埋める */
    padding: var(--spacing-sm); /* 内側の余白 */
    display: flex;            /* フレックスボックスレイアウトを使用 */
    flex-direction: column;   /* 子要素を縦に並べる */
    justify-content: center;  /* 中央揃え（縦方向） */
    width: 100%;              /* 幅を100%に設定 */
    box-sizing: border-box;   /* パディングとボーダーを幅に含める */
    overflow-wrap: break-word; /* 長いテキストを折り返し（古い仕様） */
    word-wrap: break-word;    /* 長いテキストを折り返し（新しい仕様） */
}

/* ツアー情報内のリンクと段落のスタイル */
.tour-info a, 
.tour-info p {
    margin: 0;                /* マージンをリセット */
    /* レスポンシブなフォントサイズ（画面幅に応じて0.9remから1.3remまで変化） */
    font-size: clamp(0.9rem, 2.5vw, 1.3rem); 
    max-width: 100%;          /* 最大幅を制限 */
    word-break: break-word;   /* 単語の途中でも必要に応じて折り返し */
}

/* ツアー予約セクションのスタイル */
.tour-reserve {
    width: 100%;              /* 幅を100%に設定 */
    display: flex;            /* フレックスボックスレイアウトを使用 */
    flex-wrap: wrap;          /* 必要に応じて折り返し */
    align-items: center;      /* アイテムを中央揃え（横方向） */
    gap: var(--spacing-sm);   /* アイテム間の間隔 */
}

/* ツアー予約リンクのスタイル */
.tour-reserve a {
    color: var(--color-link);   /* リンク色 */
    margin-top: var(--spacing-md); /* 上部マージン */
    display: inline-block;      /* インラインブロックとして表示 */
    word-break: break-word;     /* 長いURLでも折り返し可能に */
}

/* ホバー時のツアー予約リンクスタイル */
.tour-reserve a:hover {
    color: var(--color-link-hover); /* ホバー時の色 */
}

/* ツアーフライヤー（画像）コンテナのスタイル */
.tour-flyer {
    order: 2;                 /* フレックスアイテムの表示順序（テキストの後） */
    padding: var(--spacing-md); /* 内側の余白 */
    flex: 0 0 auto;           /* 自動サイズ調整に変更（固定値から変更） */
    max-width: 300px;         /* 最大幅を設定 */
    box-sizing: border-box;   /* パディングとボーダーを幅に含める */
    overflow: hidden;
    border-radius: var(--radius-sm);
    display: flex;            /* 追加：フレックスボックスレイアウトを使用 */
    justify-content: center;  /* 追加：中央揃え */
    align-items: center;      /* 追加：中央揃え */
}

/* ツアーカード内の画像のスタイル */
.tour-card img {
    width: 100%;                       /* 親要素の幅いっぱいに表示 */
    height: auto;                      /* 高さは自動調整（アスペクト比維持） */
    object-fit: contain;               /* 画像全体を表示（トリミングなし） */
    flex-shrink: 0;                    /* フレックスアイテムの縮小を防止 */
    border-radius: var(--radius-sm);   /* 画像の角を丸くする */
    box-shadow: var(--box-shadow-card); /* 画像に影を追加 */
    transition: transform 0.5s ease;
}

.tour-card img:hover {
    transform: scale(1.05);
}

/* 画像コンテナ用のオーバーフロー設定 */
.release-cover-container {
    overflow: hidden;
    border-radius: var(--radius-sm);
}

/* 
 * レスポンシブデザイン - タブレット向け（768px以下）
 * タブレットサイズでのレイアウト調整
 */
@media (max-width: 768px) {
    /* カードのレイアウトを縦型に変更 */
    .release-card,
    .tour-card {
        flex-direction: column;    /* 子要素を縦に並べる */
        align-items: center;       /* 中央揃え */
        width: 90%;                /* 画面幅の90%に調整 */
        padding: var(--spacing-md); /* パディングを小さくする */
        gap: var(--spacing-md);    /* 間隔を小さくする */
    }
    
    /* 画像を画面幅に合わせて拡大 */
    .release-cover,
    .tour-card img,
    .tour-flyer {
        width: 100%;               /* 幅を100%に設定 */
        max-width: 100%;           /* 最大幅も100%に */
        margin: 0 auto;            /* 中央揃え */
    }
    
    /* 情報セクションの幅調整 */
    .release-info,
    .tour-info {
        width: 100%;               /* 幅を100%に設定 */
        padding: var(--spacing-xs); /* パディングを小さくする */
    }
    
    /* サブスクリプションリンクを中央揃えに */
    .subscription-links {
        justify-content: center;   /* 中央揃え */
    }
    
    /* ツアー予約セクションのレイアウト調整 */
    .tour-reserve {
        flex-direction: column;    /* 子要素を縦に並べる */
        align-items: flex-start;   /* 左揃え */
    }
    
    /* ツアー予約ボタンの幅調整 */
    .tour-reserve a.button {
        width: auto;               /* 自動幅設定 */
        max-width: 100%;           /* はみ出さないように制限 */
        overflow-wrap: break-word; /* 長いテキストを折り返し */
    }
    
    /* タイトルを中央揃えに変更 */
    .release-title,
    .tour-info h3 {
        text-align: center;        /* テキストを中央揃え */
        margin-top: var(--spacing-sm); /* 上部マージンを追加 */
    }
    
    /* リリース日も中央揃えに */
    .release-date {
        text-align: center;        /* テキストを中央揃え */
    }
}

/* 
 * レスポンシブデザイン - スマートフォン向け（480px以下）
 * 小さい画面での更なるレイアウト調整
 */
@media (max-width: 480px) {
    /* カードの余白と幅を調整 */
    .tour-card, 
    .release-card {
        padding: var(--spacing-sm); /* パディングをさらに小さく */
        width: 95%;                /* 画面幅の95%に調整 */
    }
    
    /* ツアー情報のテキストサイズを小さく */
    .tour-info a, 
    .tour-info p {
        font-size: 0.9rem;        /* フォントサイズを小さく固定 */
    }
}

ページ読み込み時のフェードインアニメーション
@keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
}

/* カード順にアニメーション遅延を追加 */
.fade-in-left:nth-child(1),
.fade-in-left.release-card:nth-child(1),
.fade-in-left.tour-card:nth-child(1) {
    animation-delay: 0.1s;
}
.fade-in-left:nth-child(2),
.fade-in-left.release-card:nth-child(2),
.fade-in-left.tour-card:nth-child(2) {
    animation-delay: 0.2s;
}
.fade-in-left:nth-child(3),
.fade-in-left.release-card:nth-child(3),
.fade-in-left.tour-card:nth-child(3) {
    animation-delay: 0.3s;
}

/* スクロールアニメーション用クラス */
.fade-in-up {
    opacity: 0;
    transform: translateY(30px);
    transition: opacity 0.6s ease-out, transform 0.6s ease-out;
}

.fade-in-up.visible {
    opacity: 1;
    transform: translateY(0);
}

.fade-in-left {
    opacity: 0;
    transform: translateX(-30px);
    transition: opacity 0.6s ease-out, transform 0.6s ease-out;
}

.fade-in-left.visible {
    opacity: 1;
    transform: translateX(0);
}
</style>