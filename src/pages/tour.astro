    margin-bottom: var(--spacing-md);
  }

  .tour-item-wrapper {
    display: block;
    width: 100%;
  }

  /* ãƒ¬ã‚¹ãƒãƒ³ã‚·ãƒ–å¯¾å¿œ */
  @media (max-width: 768px) {
    .tour-page {
      padding: var(--spacing-md) var(--spacing-sm);
