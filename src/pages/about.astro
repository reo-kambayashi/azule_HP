---
import Layout from '../layouts/Layout.astro';
import MemberCard from '../components/MemberCard.astro';
---

<Layout>
    <section class="about-page">
        <div class="about">
            <div class="about-header">
                <h1 class="about-title">Our Message</h1>
                <p>
                    啓明さんの思いの丈を書きまくる場所
                </p>
            </div>
            
            <div class="member-box">
                <h2>Member</h2>
                <div class="member-profile">
                    <MemberCard role="Gt. Vo." memberName="鈴木啓明" description="hogehoge" imageSrc="images/masshiro.jpg" />
                    <MemberCard role="Gt." memberName="神林励旺" description="hogehoge" imageSrc="images/masshiro.jpg" />
                    <MemberCard role="Ba." memberName="大脇伊織" description="hogehoge" imageSrc="images/masshiro.jpg" />
                    <MemberCard role="Dr." memberName="柴田そよか" description="hogehoge" imageSrc="images/masshiro.jpg" />
                </div>            
            </div>
        </div>
    </section>
</Layout>

<style>
/* 共通スタイルはglobal.cssに移動しました */

.about-page {
    padding: var(--spacing-md) 0;
}

.about {
    max-width: var(--card-max-width);
    margin: 0 auto;
    padding: var(--spacing-md) var(--spacing-md);
}

/* カードコンポーネントを使用 */
.about-header, 
.member-box {
    background: var(--color-white);
    border-radius: var(--radius-base);
    box-shadow: var(--box-shadow-card);
    padding: var(--spacing-lg);
    margin-bottom: var(--spacing-xl);
}

.about-title {
    font-size: clamp(1.8rem, 4vw, 2.5rem);
    margin-bottom: var(--spacing-md);
    color: var(--color-primary);
}

.member-box h2 {
    margin-bottom: var(--spacing-lg);
    text-align: center;
}

/* メンバーカード用のグリッドレイアウトを改善 */
.member-profile {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: var(--spacing-lg);
    margin-top: var(--spacing-md);
}

/* 古いメンバーカードのスタイルは不要なので削除 */

/* レスポンシブ対応 */
@media (max-width: 768px) {
    .about {
        padding: var(--spacing-sm);
    }
    
    .about-header, 
    .member-box {
        padding: var(--spacing-md);
        margin-bottom: var(--spacing-lg);
    }
    
    .member-profile {
        gap: var(--spacing-md);
        grid-template-columns: repeat(auto-fill, minmax(240px, 1fr));
    }
}

@media (max-width: 480px) {
    .member-profile {
        grid-template-columns: 1fr;
    }
}
</style>