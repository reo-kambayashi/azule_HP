---
import Layout from "../layouts/Layout.astro";
import MemberCard from "../components/MemberCard.astro";
import members from "../data/members.json";

// メンバーの型定義を追加
interface Member {
  role: string;
  memberName: string;
  description: string;
  imageSrc: string;
}

// 型付きメンバー配列として扱う
const typedMembers = members as Member[];

// SEO情報
const title = "About Us | Azule Orchid (アズールオーキッド) | Azule";
const metaDescription =
  "Azule Orchid（アズールオーキッド、azule orchid, あずーる）のバンドメンバー紹介。Azuleの各メンバーのプロフィールや担当パートについてご紹介します。";
---

<Layout
  title={title}
  metaDescription={metaDescription}
  ogImage="images/top.JPG"
  keywords="Azule, Azule Orchid, azule, azule orchid, あずーる, アズール, about us, band member, メンバー紹介, プロフィール, 仙台, ポストポップ"
>
  <section class="about-page">
    <div class="about">
      <div class="about-header fade-in-left">
        <h1 class="concept">
          <!-- ここにコンセプト -->
        </h1>
        <p>Now Editing...</p>
      </div>

      <div class="member-box">
        <h2>Member</h2>
        <div class="member-profile fade-in-left">
          {
            typedMembers.map((member) => (
              <MemberCard
                role={member.role}
                memberName={member.memberName}
                description={member.description}
                imageSrc={member.imageSrc}
              />
            ))
          }
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  .about-page {
    padding: var(--spacing-2xl) 0;
    min-height: calc(100vh - 200px);
    background: linear-gradient(
      135deg,
      #ffffff 0%,
      #f8f9fa 25%,
      #f1f3f4 50%,
      #e9ecef 75%,
      #dee2e6 100%
    );
  }

  .about {
    max-width: var(--container-max-width);
    margin: 0 auto;
    padding: var(--spacing-lg);
  }

  .about-header {
    background: linear-gradient(
      135deg,
      rgba(255, 255, 255, 0.98) 0%,
      rgba(248, 249, 250, 0.95) 100%
    );
    backdrop-filter: blur(30px);
    border: 1px solid rgba(0, 0, 0, 0.08);
    border-radius: 20px;
    box-shadow:
      0 20px 40px rgba(0, 0, 0, 0.06),
      0 8px 16px rgba(0, 0, 0, 0.03),
      inset 0 1px 0 rgba(255, 255, 255, 0.8);
    padding: var(--spacing-2xl);
    margin-bottom: var(--spacing-2xl);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--spacing-xl);
    text-align: center;
    position: relative;
    overflow: hidden;
    transition: all 0.4s cubic-bezier(0.23, 1, 0.32, 1);
  }

  .about-header:hover {
    transform: translateY(-3px);
    box-shadow:
      0 25px 50px rgba(0, 0, 0, 0.08),
      0 12px 24px rgba(0, 0, 0, 0.04),
      inset 0 1px 0 rgba(255, 255, 255, 0.9);
    border-color: rgba(0, 0, 0, 0.12);
  }

  .about-header::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 3px;
    background: linear-gradient(
      90deg,
      var(--color-primary) 0%,
      var(--color-secondary) 50%,
      var(--color-primary) 100%
    );
    background-size: 200% 100%;
    animation: gradientFlow 4s ease-in-out infinite;
  }

  @keyframes gradientFlow {
    0%,
    100% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
  }

  .about-header h1 {
    font-family: "Inter", sans-serif;
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 800;
    background: linear-gradient(
      135deg,
      var(--color-primary) 0%,
      var(--color-secondary) 50%,
      var(--color-accent) 100%
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin: 0;
    letter-spacing: 1.5px;
    position: relative;
    background-size: 200% 200%;
    animation: gradientShift 5s ease-in-out infinite;
  }

  @keyframes gradientShift {
    0%,
    100% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
  }

  .about-header p {
    font-family: "Inter", sans-serif;
    font-size: clamp(1rem, 2.5vw, 1.2rem);
    color: var(--color-text-light);
    line-height: 1.7;
    margin: 0;
    font-weight: 500;
    opacity: 0.8;
  }

  .member-box {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    box-sizing: border-box;
  }

  .member-box h2 {
    font-family: "Inter", sans-serif;
    font-size: clamp(2rem, 4.5vw, 2.5rem);
    font-weight: 800;
    background: linear-gradient(
      135deg,
      var(--color-primary) 0%,
      var(--color-secondary) 100%
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: var(--spacing-2xl);
    text-align: center;
    position: relative;
    letter-spacing: 1px;
  }

  .member-box h2::after {
    content: "";
    position: absolute;
    bottom: -12px;
    left: 50%;
    transform: translateX(-50%);
    width: 80px;
    height: 3px;
    background: linear-gradient(
      90deg,
      var(--color-primary) 0%,
      var(--color-secondary) 100%
    );
    border-radius: 2px;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.15);
  }

  .member-profile {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: var(--spacing-2xl);
    width: 100%;
    max-width: 1200px;
    padding: var(--spacing-lg) 0;
  }

  /* レスポンシブ対応 */
  @media (max-width: 1024px) {
    .member-profile {
      grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
      gap: var(--spacing-xl);
    }

    .about-header {
      padding: var(--spacing-xl);
    }
  }

  @media (max-width: 768px) {
    .about {
      padding: var(--spacing-md);
    }

    .about-header {
      padding: var(--spacing-xl);
      margin-bottom: var(--spacing-xl);
      border-radius: 16px;
    }

    .about-page {
      padding: var(--spacing-xl) 0;
    }

    .member-profile {
      grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
      gap: var(--spacing-xl);
    }

    .member-box h2 {
      margin-bottom: var(--spacing-xl);
    }
  }

  @media (max-width: 600px) {
    .member-profile {
      grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
      gap: var(--spacing-lg);
    }

    .about-header {
      padding: var(--spacing-lg);
    }
  }

  @media (max-width: 480px) {
    .about-page {
      padding: var(--spacing-lg) 0;
    }

    .about {
      padding: var(--spacing-sm);
    }

    .about-header {
      padding: var(--spacing-lg);
      border-radius: 12px;
    }

    .member-profile {
      grid-template-columns: 1fr;
      gap: var(--spacing-lg);
      padding: var(--spacing-md) 0;
    }

    .member-box h2 {
      margin-bottom: var(--spacing-lg);
    }

    .member-box h2::after {
      width: 60px;
      height: 3px;
    }
  }
</style>
