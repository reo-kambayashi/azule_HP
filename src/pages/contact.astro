---
import Layout from '../layouts/Layout.astro';
import '../styles/contact.css';
import contact from '../data/contact.json';

const xHandle = new URL(contact.x).pathname.slice(1);
const instagramHandle = new URL(contact.instagram).pathname.slice(1);
const youtubeHandle = new URL(contact.youtube).pathname.slice(1);
---
<Layout>
    <section class="contact-page">
        <div class="contact">
            <h1>Contact / SNS</h1>
            <ul>
                <li>
                    <span class="label">Email:</span> 
                    <a href={`mailto:${contact.email}`}>{contact.email}</a>
                </li>
                <li>
                    <span class="label">X:</span> 
                    <a href={contact.x} target="_blank" rel="noopener">@{xHandle}</a>
                </li>
                <li>
                    <span class="label">Instagram:</span> 
                    <a href={contact.instagram} target="_blank" rel="noopener">@{instagramHandle}</a>
                </li>
                <li>
                    <span class="label">YouTube:</span> 
                    <a href={contact.youtube} target="_blank" rel="noopener">{youtubeHandle}</a>
                </li>
            </ul>
        </div>
    </section>
</Layout>