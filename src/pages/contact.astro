---
import Layout from "../layouts/Layout.astro";
import contact from "../data/contact.json";

// import ComponentsStyles from '../styles/ComponentsStyles.astro'; // 削除
const title = "Contact | Azule Orchid (アズールオーキッド) | Azule";
const metaDescription =
  "Azule Orchid（アズールオーキッド、azule orchid, あずーる）へのお問い合わせはこちらから。Azuleのライブ出演依頼、その他ご連絡をお待ちしております。各種SNSアカウントもこちらからご覧いただけます。";
const xHandle = new URL(contact.x).pathname.slice(1);
const instagramHandle = new URL(contact.instagram).pathname.slice(1);
const youtubeHandle = new URL(contact.youtube).pathname.slice(1);
---

<Layout
  title={title}
  metaDescription={metaDescription}
  keywords="Azule, Azule Orchid, azule, azule orchid, あずーる, アズール, contact,問い合わせ, SNS, email, X, Instagram, YouTube, ライブ依頼, 仙台, ポストポップ"
>
  <!-- <ComponentsStyles /> -->
  <!-- 削除 -->
  <section class="contact-page">
    <div class="contact fade-in-left">
      <h1>Contact / SNS</h1>
      <ul>
        <li data-type="email">
          <span class="label">Email:</span>
          <a href={`mailto:${contact.email}`}>{contact.email}</a>
        </li>
        <li data-type="x">
          <span class="label">X:</span>
          <a href={contact.x} target="_blank" rel="noopener">@{xHandle}</a>
        </li>
        <li data-type="instagram">
          <span class="label">Instagram:</span>
          <a href={contact.instagram} target="_blank" rel="noopener"
            >@{instagramHandle}</a
          >
        </li>
        <li data-type="youtube">
          <span class="label">YouTube:</span>
          <a href={contact.youtube} target="_blank" rel="noopener"
            >{youtubeHandle}</a
          >
        </li>
      </ul>
    </div>
  </section>
</Layout>

<style>
  .contact-page {
    padding: var(--spacing-lg) var(--spacing-md);
    min-height: calc(100vh - 200px);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .contact {
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-glass);
    padding: var(--spacing-2xl);
    width: 100%;
    max-width: 600px;
    margin: 0 auto;
    position: relative;
    overflow: hidden;
  }

  .contact::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 3px;
    background: linear-gradient(
      90deg,
      var(--color-secondary),
      var(--color-accent),
      var(--color-secondary)
    );
  }

  .contact h1 {
    font-family: "Inter", sans-serif;
    font-size: clamp(2rem, 5vw, 2.8rem);
    font-weight: 700;
    background: linear-gradient(
      135deg,
      var(--color-secondary),
      var(--color-accent)
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: var(--spacing-xl);
    text-align: center;
    letter-spacing: 1px;
  }

  .contact ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: var(--spacing-lg);
  }

  .contact li {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-xs);
    padding: var(--spacing-md);
    background: rgba(255, 255, 255, 0.8);
    backdrop-filter: blur(10px);
    border-radius: var(--radius-base);
    border: 1px solid rgba(255, 255, 255, 0.3);
    transition: var(--transition-base);
    position: relative;
  }

  .contact li:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
    background: rgba(255, 255, 255, 0.9);
  }

  .contact .label {
    font-family: "Inter", sans-serif;
    font-size: 0.9rem;
    font-weight: 700;
    color: var(--color-text-light);
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: var(--spacing-xs);
  }

  .contact a {
    font-family: "Inter", sans-serif;
    font-size: clamp(1.1rem, 2.5vw, 1.3rem);
    font-weight: 600;
    color: var(--color-text);
    text-decoration: none;
    transition: var(--transition-base);
    position: relative;
    word-break: break-all;
  }

  .contact a::after {
    content: "";
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 2px;
    background: linear-gradient(
      90deg,
      var(--color-secondary),
      var(--color-accent)
    );
    transition: width 0.3s ease;
  }

  .contact a:hover {
    color: var(--color-secondary);
    transform: translateX(4px);
  }

  .contact a:hover::after {
    width: 100%;
  }

  /* アイコンの追加 */
  .contact li[data-type="email"] .label::before {
    content: "✉️ ";
  }

  .contact li[data-type="x"] .label::before {
    content: "🐦 ";
  }

  .contact li[data-type="instagram"] .label::before {
    content: "📷 ";
  }

  .contact li[data-type="youtube"] .label::before {
    content: "🎥 ";
  }

  /* レスポンシブ対応 */
  @media (max-width: 768px) {
    .contact-page {
      padding: var(--spacing-md) var(--spacing-sm);
      align-items: flex-start;
      padding-top: var(--spacing-xl);
    }

    .contact {
      padding: var(--spacing-xl);
      max-width: 100%;
    }

    .contact h1 {
      margin-bottom: var(--spacing-lg);
    }

    .contact ul {
      gap: var(--spacing-md);
    }

    .contact li {
      padding: var(--spacing-sm) var(--spacing-md);
    }
  }

  @media (max-width: 480px) {
    .contact {
      padding: var(--spacing-lg);
    }

    .contact h1 {
      margin-bottom: var(--spacing-md);
    }

    .contact ul {
      gap: var(--spacing-sm);
    }
  }
</style>
