---
import Layout from '../layouts/Layout.astro';
import contact from '../data/contact.json';

const xHandle = new URL(contact.x).pathname.slice(1);
const instagramHandle = new URL(contact.instagram).pathname.slice(1);
const youtubeHandle = new URL(contact.youtube).pathname.slice(1);
---
<Layout>
    <section class="contact-page">
        <div class="contact">
            <h1>Contact / SNS</h1>
            <ul>
                <li>
                    <span class="label">Email:</span> 
                    <a href={`mailto:${contact.email}`}>{contact.email}</a>
                </li>
                <li>
                    <span class="label">X:</span> 
                    <a href={contact.x} target="_blank" rel="noopener">@{xHandle}</a>
                </li>
                <li>
                    <span class="label">Instagram:</span> 
                    <a href={contact.instagram} target="_blank" rel="noopener">@{instagramHandle}</a>
                </li>
                <li>
                    <span class="label">YouTube:</span> 
                    <a href={contact.youtube} target="_blank" rel="noopener">{youtubeHandle}</a>
                </li>
            </ul>
        </div>
    </section>
</Layout>

<style>
/* 共通スタイルはglobal.cssに移動しました */

.contact-page {
    padding: var(--spacing-md) 0;
}

.contact {
    background-color: var(--color-white);
    border-radius: var(--radius-base);
    box-shadow: var(--box-shadow-card);
    padding: var(--spacing-lg);
    width: var(--card-width);
    max-width: var(--card-max-width);
    margin: var(--spacing-xl) auto;
}

.contact h1 {
    font-size: clamp(1.8rem, 4vw, 2.5rem);
    margin-bottom: var(--spacing-md);
    color: var(--color-primary);
}

.contact ul {
    list-style: none;
    padding: 0;
    margin: 0;
}

.contact li {
    display: grid;
    grid-template-columns: max-content auto;
    column-gap: var(--spacing-md);
    align-items: center;
    margin-bottom: var(--spacing-sm);
    font-size: clamp(1rem, 2.5vw, 1.5rem);
    color: var(--color-text);
}

.contact .label {
    text-align: right;
    font-weight: 600;
}

.contact a {
    color: var(--color-link);
    transition: var(--transition-base);
}

.contact a:hover {
    color: var(--color-link-hover);
}

/* レスポンシブ対応 */
@media (max-width: 768px) {
    .contact {
        padding: var(--spacing-md);
        width: 90%;
        margin: var(--spacing-lg) auto;
    }

    .contact h1 {
        font-size: 1.8rem;
        margin-bottom: var(--spacing-md);
    }

    .contact li {
        display: block;
        grid-template-columns: none;
        margin-bottom: var(--spacing-md);
    }

    .contact .label {
        text-align: left;
        margin-bottom: var(--spacing-xs);
        display: block;
    }

    .contact li,
    .contact a {
        font-size: 1.1rem;
    }
}
</style>