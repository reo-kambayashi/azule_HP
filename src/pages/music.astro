---
import Layout from '../layouts/Layout.astro';
import ReleaseCard from '../components/ReleaseCard.astro';
import releases from '../data/releases.json';
import ComponentsStyles from '../styles/ComponentsStyles.astro';
---
<Layout>
    <ComponentsStyles />
    <section class="music-page">
        <h1 class="music-page-title">Releases</h1>
        
        <div class="releases-section">
            {releases.length > 0 ? (
                <div class="release-list fade-in-left">
                    {releases.map((release) => (
                        <ReleaseCard
                            id={release.id}
                            title={release.title}
                            cover={release.cover}
                            releaseDate={release.releaseDate}
                            tracks={release.tracks}
                            links={release.links}
                        />
                    ))}
                </div>
            ) : (
                <p class="no-releases">現在リリース情報はありません。</p>
            )}
        </div>
    </section>
</Layout>

<style>
.music {
    width: 90%;
}

.music-header {
    padding: 1.5rem;
    margin-top: 1rem;
    margin-bottom: 0rem;
}

.music-page {
    padding: var(--spacing-md) 0;
}

.music-page-title {
    font-size: clamp(1.8rem, 4vw, 2.5rem);
    margin-bottom: var(--spacing-lg);
    text-align: center;
}

.releases-section {
    margin-bottom: var(--spacing-2xl);
}

.release-list {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-lg);
    max-width: var(--container-max-width);
    margin: 0 auto;
}

.no-releases {
    text-align: center;
    padding: var(--spacing-lg);
    color: var(--color-text-light);
    font-style: italic;
    background-color: var(--color-white);
    border-radius: var(--radius-base);
    box-shadow: var(--box-shadow-card);
    width: var(--card-width);
    max-width: var(--card-max-width);
    margin: var(--spacing-xl) auto;
}

@media (max-width: 768px) {
    .music-page {
        padding: var(--spacing-sm) 0;
    }
    
    .music-page-title {
        margin-bottom: var(--spacing-md);
    }
    
    .releases-section {
        margin-bottom: var(--spacing-xl);
    }
}
</style>
