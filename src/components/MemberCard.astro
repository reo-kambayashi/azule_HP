---
export interface Props {
    role: string;
    memberName: string;
    description: string;
    imageSrc: string;
}
const { role, memberName, description, imageSrc } = Astro.props;
const imageFullPath = `${import.meta.env.BASE_URL}${imageSrc}`;
---

<article class="member-card">
    <div class="member-photo-container">
        <img src={imageFullPath} alt={memberName} class="member-photo" />
    </div>
    <div class="member-info">
        <h3 class="member-role">{role}</h3>
        <h4 class="member-name">{memberName}</h4>
        <p class="member-description">{description}</p>
    </div>
</article>

<style>
.member-card {
    background: var(--color-white);
    border-radius: var(--radius-base);
    box-shadow: var(--box-shadow-card);
    padding: var(--spacing-lg);
    margin-bottom: var(--spacing-md);
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--spacing-md);
}

.member-photo-container {
    width: 180px;
    height: 180px;
    overflow: hidden;
    border-radius: 50%;
    box-shadow: var(--box-shadow-card);
}

.member-photo {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.member-info {
    flex: 1;
    text-align: center;
}

.member-role {
    margin-bottom: var(--spacing-xs);
    font-size: 1.2rem;
    color: var(--color-primary);
}

.member-name {
    margin-bottom: var(--spacing-sm);
    font-size: 1.4rem;
}

.member-description {
    line-height: 1.5;
    color: var(--color-text);
}

@media (max-width: 768px) {
    .member-card {
        padding: var(--spacing-md);
    }

    .member-photo-container {
        width: 150px;
        height: 150px;
    }
}

@media (max-width: 480px) {
    .member-photo-container {
        width: 120px;
        height: 120px;
    }
    
    .member-role {
        font-size: 1.1rem;
    }
    
    .member-name {
        font-size: 1.2rem;
    }
}
</style>