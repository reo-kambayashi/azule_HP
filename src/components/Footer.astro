---
const base = import.meta.env.BASE_URL;
---
<footer class="site-footer">
    <div class="container">
        <p class="footer-text">&copy; {new Date().getFullYear()} Azule Orchid. All rights reserved.</p>
        <nav class="footer-nav">
            <ul class="nav-links">
                <li><a href={base} class="footer-link">Home</a></li>
                <li><a href={`${base}about/`} class="footer-link">About Us</a></li>
                <li><a href={`${base}music/`} class="footer-link">Releases</a></li>
                <li><a href={`${base}tour/`} class="footer-link">Live</a></li>
                <li><a href={`${base}contact/`} class="footer-link">Contact</a></li>
            </ul>
        </nav>
    </div>
</footer>

<style>
.site-footer {
    background-color: var(--footer-bg);
    border-top: 1px solid var(--footer-border);
    padding: var(--spacing-md) 0;
}

.site-footer .container {
    max-width: var(--container-max-width);
    margin: 0 auto;
    padding: var(--spacing-md);
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.site-footer .footer-text {
    font-family: 'Open Sans', sans-serif;
    font-size: 0.875rem;
    color: var(--color-text-light);
    margin: 0;
}

.site-footer .footer-nav .nav-links {
    list-style: none;
    display: flex;
    gap: var(--spacing-md);
    margin: 0;
    padding: 0;
}

.site-footer .footer-nav .nav-links li .footer-link {
    font-family: 'Open Sans', sans-serif;
    font-weight: 600;
    font-size: 0.875rem;
    text-decoration: none;
    color: var(--color-text);
    transition: var(--transition-base);
    padding: var(--spacing-xs) var(--spacing-sm);
    border-radius: var(--radius-sm);
}

.site-footer .footer-nav .nav-links li .footer-link:hover {
    color: var(--color-link-hover);
    background-color: rgba(0, 0, 0, 0.03);
}

@media (max-width: 768px) {
    .site-footer .container {
        flex-direction: column;
        text-align: center;
        gap: var(--spacing-md);
    }
    
    .site-footer .footer-nav .nav-links {
        justify-content: center;
        flex-wrap: wrap;
    }
    
    .site-footer .footer-nav .nav-links li .footer-link {
        padding: var(--spacing-xs) var(--spacing-xs);
    }
}

@media (max-width: 480px) {
    .site-footer .footer-nav .nav-links {
        gap: var(--spacing-sm);
    }
    
    .site-footer .footer-nav .nav-links li {
        margin-bottom: var(--spacing-xs);
    }
    
    .site-footer .footer-nav .nav-links li .footer-link {
        font-size: 0.8rem;
        padding: var(--spacing-xs) calc(var(--spacing-xs) * 0.7);
        display: inline-block;
    }
    
    .site-footer .footer-text {
        font-size: 0.8rem;
    }
}
</style>
