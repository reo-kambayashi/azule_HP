---
const base = import.meta.env.BASE_URL;
---
<footer class="site-footer">
    <div class="container">
        <p class="footer-text">&copy; {new Date().getFullYear()} Azule Orchid. All rights reserved.</p>
        <nav class="footer-nav">
            <ul class="nav-links">
                <li><a href={base} class="footer-link">Home</a></li>
                <li><a href={`${base}about/`} class="footer-link">About Us</a></li>
                <li><a href={`${base}music/`} class="footer-link">Releases</a></li>
                <li><a href={`${base}tour/`} class="footer-link">Live</a></li>
                <li><a href={`${base}contact/`} class="footer-link">Contact</a></li>
            </ul>
        </nav>
    </div>
</footer>

<style>
.site-footer {
    background-color: var(--footer-bg);
    border-top: 1px solid var(--footer-border);
    padding: var(--spacing-md) 0;
    width: 100%;
    box-sizing: border-box;
}

.site-footer .container {
    max-width: var(--container-max-width);
    margin: 0 auto;
    padding: var(--spacing-md);
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-wrap: wrap; /* 必要に応じて折り返し */
}

.site-footer .footer-text {
    font-family: 'Open Sans', sans-serif;
    font-size: 0.875rem;
    color: var(--color-text-light);
    margin: 0;
}

.site-footer .footer-nav .nav-links {
    list-style: none;
    display: flex;
    flex-wrap: wrap; /* 必要に応じて折り返し */
    gap: var(--spacing-md);
    margin: 0;
    padding: 0;
}

.site-footer .footer-nav .nav-links li .footer-link {
    font-family: 'Open Sans', sans-serif;
    font-weight: 600;
    font-size: 0.875rem;
    text-decoration: none;
    color: var(--color-text);
    transition: var(--transition-base);
    padding: var(--spacing-xs) var(--spacing-sm);
    border-radius: var(--radius-sm);
    display: inline-flex; /* インラインフレックスとして表示 */
    align-items: center; /* 縦方向中央揃え */
    justify-content: center; /* 横方向中央揃え */
    min-height: var(--touch-target-min); /* タップエリアの最小高さ */
}

.site-footer .footer-nav .nav-links li .footer-link:hover {
    color: var(--color-link-hover);
    background-color: rgba(0, 0, 0, 0.03);
    text-decoration: none;
}

/* フォーカス状態の視覚的フィードバック */
.site-footer .footer-nav .nav-links li .footer-link:focus {
    outline: 2px solid var(--color-secondary);
    outline-offset: 2px;
}

@media (max-width: 768px) {
    .site-footer .container {
        flex-direction: column;
        text-align: center;
        gap: var(--spacing-md);
    }
    
    .site-footer .footer-nav .nav-links {
        justify-content: center;
        flex-wrap: wrap;
        gap: var(--spacing-xs); /* リンク間の間隔を狭く */
    }
    
    .site-footer .footer-nav .nav-links li .footer-link {
        padding: var(--spacing-sm) var(--spacing-md); /* パディングを増やしてタップしやすく */
        margin-bottom: var(--spacing-xs); /* 下部マージンを追加 */
    }
}

@media (max-width: 480px) {
    .site-footer .footer-nav .nav-links {
        gap: var(--spacing-xs);
        width: 100%; /* 幅を100%に */
    }
    
    .site-footer .footer-nav .nav-links li {
        width: calc(50% - var(--spacing-xs)); /* 2列グリッドのように配置 */
        margin-bottom: var(--spacing-sm);
        text-align: center;
    }
    
    .site-footer .footer-nav .nav-links li .footer-link {
        font-size: 0.8rem;
        padding: var(--spacing-sm) var(--spacing-xs);
        display: flex;
        width: 100%; /* 幅を100%に */
        box-sizing: border-box;
    }
    
    .site-footer .footer-text {
        font-size: 0.8rem;
        width: 100%;
        padding: var(--spacing-sm) 0;
    }
}

/* 小型スマートフォン向け (375px以下) */
@media (max-width: 375px) {
    .site-footer .container {
        padding: var(--spacing-sm) var(--spacing-xs);
    }
    
    .site-footer .footer-nav .nav-links li {
        width: 100%; /* 1列に */
        margin-bottom: var(--spacing-xs);
    }
    
    .site-footer .footer-text {
        font-size: 0.75rem;
    }
}
</style>
