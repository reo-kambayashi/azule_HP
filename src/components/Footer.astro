---
// CSSをJavaScriptインポートとして読み込む
import '../styles/Footer.css';
// 共通パスユーティリティをインポート
import { createPath } from '../utils/paths.js';
const base = import.meta.env.BASE_URL;
---
<footer class="site-footer">
    <div class="container">
        <p class="footer-text">&copy; {new Date().getFullYear()} Azule Orchid. All rights reserved.</p>
        <nav class="footer-nav">
            <ul class="nav-links">
                <li><a href={base} class="footer-link">Home</a></li>
                <li><a href={createPath('about')} class="footer-link">About Us</a></li>
                <li><a href={createPath('music')} class="footer-link">Releases</a></li>
                <li><a href={createPath('tour')} class="footer-link">Live</a></li>
                <li><a href={createPath('contact')} class="footer-link">Contact</a></li>
            </ul>
        </nav>
    </div>
</footer>
