---
import '../styles/Header.css';
const base = import.meta.env.BASE_URL; // base を取り込む
---

<header class="site-header">
    <div class="container">
        <h1 class="logo">
        <!-- ロゴも動的に base を付与 -->
        <a href={base}>
            <img src={`${base}images/logo.png`} alt="Azule Orchid" />
        </a>
        </h1>
        <nav class="main-nav">
        <ul class="nav-links">
            <li><a href={base}>Home</a></li>
            <li><a href={`${base}about`}>About Us</a></li>
            <li><a href={`${base}music`}>Releases</a></li>
            <li><a href={`${base}tour`}>Live</a></li>
            <li><a href={`${base}contact`}>Contact / SNS</a></li>
        </ul>
        </nav>
    </div>
</header>
