---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Global from '../components/Global.astro';

const base = import.meta.env.BASE_URL;

export interface Props {
    title?: string;
    description?: string;
}

const { title = "Azule Orchid", description } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <!-- Favicon -->
        <link rel="icon" href={`${base}favicon.svg`} type="image/svg+xml" />
        <!-- Generator Meta -->
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
        {description && <meta name="description" content={description} />}
        <!-- Google Fonts (absolute URL remains valid) -->
        <link
        href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&family=Open+Sans:wght@400;600&display=swap"
        rel="stylesheet"
        />
        <!-- グローバルスタイルコンポーネントを使用 -->
        <Global />
    </head>
    <body>
        <!-- Site Header -->
        <Header />

        <!-- Main Content -->
        <main class="container">
        <slot />
        </main>

        <!-- Site Footer -->
        <Footer />
    </body>
</html>

<style>
/* レイアウト固有のスタイル - Layout.cssから移行 */
main.container {
    padding-top: 1rem;
    padding-bottom: 2rem;
}
</style>
