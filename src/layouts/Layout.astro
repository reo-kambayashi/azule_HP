---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Global from '../styles/Global.astro';
const base = import.meta.env.BASE_URL; // e.g. "/azule_HP/"
---
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <!-- Favicon -->
        <link rel="icon" href={`${base}favicon.svg`} type="image/svg+xml" />
        <!-- Generator Meta -->
        <meta name="generator" content={Astro.generator} />
        <title>Azule Orchid</title>
        <!-- Google Fonts (absolute URL remains valid) -->
        <link
        href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&family=Open+Sans:wght@400;600&display=swap"
        rel="stylesheet"
        />
        <Global />
    </head>
    <body>
        <!-- Site Header -->
        <Header />

        <!-- Main Content -->
        <main class="container">
        <slot />
        </main>

        <!-- Site Footer -->
        <Footer />
    </body>
</html>

<style>
/* レイアウト固有のスタイル */
main.container {
    padding-top: 1rem;
    padding-bottom: 2rem;
}
</style>
